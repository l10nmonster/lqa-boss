{
  "manifest_version": 3,
  "name": "LQA Boss Capture",
  "version": "3.0.0",
  "description": "Capture web pages with screenshots and translation metadata for LQA review",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "storage",
    "debugger",
    "downloads",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "action": {
    "default_title": "LQA Boss Capture",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://lqaboss.l10n.monster/*"
    ]
  }
}
